error {
    404 {
        @context.notfoundDocument = ${q(site).find('notfound').get(0)}
        condition = ${statusCode >= 400 && statusCode < 500 && notfoundDocument}
        renderer = Neos.Fusion:Renderer {
            @context.node = ${notfoundDocument}
            renderPath = '/root'
        }
    }
}
