{
    "name": "sitegeist/sitegeist-base-distribution",
    "description": "Sitegeist Neos Base Distribution",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin",
        "platform": {
            "php": "7.2"
        }
    },
    "require": {
        "sitegeist/site-placeholder": "1.0.1"
    },
    "require-dev": {
        "neos/buildessentials": "5.3.x-dev",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^7.0",
        "symfony/css-selector": "~2.0",
        "neos/behat": "dev-master",
        "sitegeist/magicwand": "~4.0.0",
        "deployer/deployer": "^6.2",
        "editorconfig-checker/editorconfig-checker": "^8.0",
        "sitegeist/neosguidelines": "^1.2",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "lint": "exit 0",
        "test": "exit 0"
    },
    "repositories": {
        "local": {
            "type": "path",
            "url": "./DistributionPackages/*"
        }
    }
}
